@model TWS.Web.ViewModels.Investor.SelectInvestorTypeJointViewModel
@{
    ViewData["Title"] = "Joint Investor Type";
}

<div class="container py-5">
    <div class="row justify-content-center">
        <div class="col-md-10">
            <div class="card shadow">
                <div class="card-header bg-success text-white">
                    <h3 class="mb-0">
                        <i class="fas fa-users me-2"></i>Joint Investor
                    </h3>
                </div>
                <div class="card-body p-4">
                    <p class="text-muted mb-4">
                        Provide information for joint account holders.
                    </p>

                    @if (TempData["ErrorMessage"] != null)
                    {
                        <div class="alert alert-danger alert-dismissible fade show" role="alert">
                            @TempData["ErrorMessage"]
                            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                        </div>
                    }

                    <form asp-action="SubmitJoint" method="post">
                        <div asp-validation-summary="ModelOnly" class="alert alert-danger"></div>

                        <div class="mb-3">
                            <label asp-for="JointAccountType" class="form-label"></label>
                            <select asp-for="JointAccountType" class="form-select">
                                <option value="">-- Select Joint Account Type --</option>
                                <option value="1">Joint Tenants with Right of Survivorship</option>
                                <option value="2">Joint Tenants in Common</option>
                                <option value="3">Tenants by the Entirety</option>
                                <option value="4">Married Person - Sole Property</option>
                                <option value="5">Husband/Wife - Community Property with Rights</option>
                                <option value="6">Husband/Wife - Community Property</option>
                            </select>
                            <span asp-validation-for="JointAccountType" class="text-danger small"></span>
                        </div>

                        <h5 class="mt-4 mb-3">Primary Account Holder</h5>
                        <div class="row mb-3">
                            <div class="col-md-6">
                                <label asp-for="PrimaryFirstName" class="form-label"></label>
                                <input asp-for="PrimaryFirstName" class="form-control" />
                                <span asp-validation-for="PrimaryFirstName" class="text-danger small"></span>
                            </div>
                            <div class="col-md-6">
                                <label asp-for="PrimaryLastName" class="form-label"></label>
                                <input asp-for="PrimaryLastName" class="form-control" />
                                <span asp-validation-for="PrimaryLastName" class="text-danger small"></span>
                            </div>
                        </div>

                        <div class="mb-3">
                            <label class="form-label">@Html.DisplayNameFor(m => m.PrimaryIsUSCitizen)</label>
                            <div class="form-check">
                                <input asp-for="PrimaryIsUSCitizen" type="radio" value="true" class="form-check-input" id="primaryCitizenYes" />
                                <label class="form-check-label" for="primaryCitizenYes">Yes</label>
                            </div>
                            <div class="form-check">
                                <input asp-for="PrimaryIsUSCitizen" type="radio" value="false" class="form-check-input" id="primaryCitizenNo" />
                                <label class="form-check-label" for="primaryCitizenNo">No</label>
                            </div>
                            <span asp-validation-for="PrimaryIsUSCitizen" class="text-danger small"></span>
                        </div>

                        <h5 class="mt-4 mb-3">Secondary Account Holder (Optional)</h5>
                        <div class="row mb-3">
                            <div class="col-md-6">
                                <label asp-for="SecondaryFirstName" class="form-label"></label>
                                <input asp-for="SecondaryFirstName" class="form-control" />
                                <span asp-validation-for="SecondaryFirstName" class="text-danger small"></span>
                            </div>
                            <div class="col-md-6">
                                <label asp-for="SecondaryLastName" class="form-label"></label>
                                <input asp-for="SecondaryLastName" class="form-control" />
                                <span asp-validation-for="SecondaryLastName" class="text-danger small"></span>
                            </div>
                        </div>

                        <div class="mb-3">
                            <label class="form-label">@Html.DisplayNameFor(m => m.SecondaryIsUSCitizen)</label>
                            <div class="form-check">
                                <input asp-for="SecondaryIsUSCitizen" type="radio" value="true" class="form-check-input" id="secondaryCitizenYes" />
                                <label class="form-check-label" for="secondaryCitizenYes">Yes</label>
                            </div>
                            <div class="form-check">
                                <input asp-for="SecondaryIsUSCitizen" type="radio" value="false" class="form-check-input" id="secondaryCitizenNo" />
                                <label class="form-check-label" for="secondaryCitizenNo">No</label>
                            </div>
                        </div>

                        <h5 class="mt-4 mb-3">Accreditation</h5>
                        <div class="mb-3">
                            <label class="form-label">@Html.DisplayNameFor(m => m.IsAccredited)</label>
                            <div class="form-check">
                                <input asp-for="IsAccredited" type="radio" value="true" class="form-check-input"
                                       id="accreditedYes" onchange="toggleAccreditationType(true)" />
                                <label class="form-check-label" for="accreditedYes">Yes</label>
                            </div>
                            <div class="form-check">
                                <input asp-for="IsAccredited" type="radio" value="false" class="form-check-input"
                                       id="accreditedNo" onchange="toggleAccreditationType(false)" />
                                <label class="form-check-label" for="accreditedNo">No</label>
                            </div>
                            <span asp-validation-for="IsAccredited" class="text-danger small"></span>
                        </div>

                        <div class="mb-4" id="accreditationTypeDiv" style="display:none;">
                            <label asp-for="AccreditationType" class="form-label"></label>
                            <select asp-for="AccreditationType" class="form-select">
                                <option value="">-- Select Accreditation Type --</option>
                                <option value="1">Net Worth ($1M+)</option>
                                <option value="2">Income ($200K/$300K+)</option>
                                <option value="3">Series 7 License</option>
                                <option value="4">Series 65 License</option>
                                <option value="5">Series 82 License</option>
                                <option value="6">Professional Role (SEC-registered)</option>
                            </select>
                        </div>

                        <div class="d-grid gap-2">
                            <button type="submit" class="btn btn-success btn-lg">
                                <i class="fas fa-arrow-right me-2"></i>Continue
                            </button>
                            <a asp-action="SelectType" class="btn btn-outline-secondary">
                                <i class="fas fa-arrow-left me-2"></i>Back to Type Selection
                            </a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <script>
        function toggleAccreditationType(show) {
            document.getElementById('accreditationTypeDiv').style.display = show ? 'block' : 'none';
        }
        document.addEventListener('DOMContentLoaded', function() {
            if (document.getElementById('accreditedYes')?.checked) {
                toggleAccreditationType(true);
            }
        });
    </script>
}
