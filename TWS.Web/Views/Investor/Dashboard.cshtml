@{
    ViewData["Title"] = "Investor Dashboard";
    var profileId = ViewBag.ProfileId;
}

<div class="container-fluid py-4">
    <div class="row mb-4">
        <div class="col-12">
            <h2 class="display-6 fw-bold">
                <i class="fas fa-tachometer-alt me-2"></i>Investor Dashboard
            </h2>
            <p class="text-muted">Profile ID: @profileId</p>
        </div>
    </div>

    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            <i class="fas fa-check-circle me-2"></i>
            @TempData["SuccessMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    <div class="row g-4">
        <!-- Profile Progress Card -->
        <div class="col-md-12 col-lg-4">
            <div class="card shadow-sm h-100">
                <div class="card-header bg-primary text-white">
                    <h5 class="mb-0"><i class="fas fa-chart-line me-2"></i>Profile Completion</h5>
                </div>
                <div class="card-body">
                    <div class="text-center mb-3">
                        <div class="display-4 fw-bold text-primary">15%</div>
                        <p class="text-muted">Complete</p>
                    </div>
                    <div class="progress" style="height: 25px;">
                        <div class="progress-bar bg-primary" role="progressbar" style="width: 15%"
                             aria-valuenow="15" aria-valuemin="0" aria-valuemax="100">
                            15%
                        </div>
                    </div>
                    <div class="mt-3">
                        <small class="text-muted">
                            Complete all profile sections to start investing.
                        </small>
                    </div>
                </div>
            </div>
        </div>

        <!-- Quick Actions Card -->
        <div class="col-md-12 col-lg-8">
            <div class="card shadow-sm h-100">
                <div class="card-header bg-success text-white">
                    <h5 class="mb-0"><i class="fas fa-tasks me-2"></i>Complete Your Profile</h5>
                </div>
                <div class="card-body">
                    <p class="text-muted mb-3">Complete the following sections to activate your investor profile:</p>
                    <div class="list-group">
                        <a href="#" class="list-group-item list-group-item-action d-flex justify-content-between align-items-center">
                            <div>
                                <i class="fas fa-user text-primary me-2"></i>
                                <strong>General Information</strong>
                                <p class="mb-0 small text-muted">Personal details and contact information</p>
                            </div>
                            <span class="badge bg-warning rounded-pill">Incomplete</span>
                        </a>
                        <a href="#" class="list-group-item list-group-item-action d-flex justify-content-between align-items-center">
                            <div>
                                <i class="fas fa-id-card text-primary me-2"></i>
                                <strong>Primary Investor Info</strong>
                                <p class="mb-0 small text-muted">Investment experience and financial details</p>
                            </div>
                            <span class="badge bg-warning rounded-pill">Incomplete</span>
                        </a>
                        <a href="#" class="list-group-item list-group-item-action d-flex justify-content-between align-items-center">
                            <div>
                                <i class="fas fa-certificate text-primary me-2"></i>
                                <strong>Accreditation</strong>
                                <p class="mb-0 small text-muted">Verify accredited investor status</p>
                            </div>
                            <span class="badge bg-warning rounded-pill">Incomplete</span>
                        </a>
                        <a href="#" class="list-group-item list-group-item-action d-flex justify-content-between align-items-center">
                            <div>
                                <i class="fas fa-users text-primary me-2"></i>
                                <strong>Beneficiaries</strong>
                                <p class="mb-0 small text-muted">Add primary and contingent beneficiaries</p>
                            </div>
                            <span class="badge bg-warning rounded-pill">Incomplete</span>
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Additional Sections Row -->
    <div class="row g-4 mt-2">
        <div class="col-md-6 col-lg-3">
            <div class="card shadow-sm text-center">
                <div class="card-body">
                    <i class="fas fa-file-invoice-dollar fa-3x text-info mb-3"></i>
                    <h5>Financial Statement</h5>
                    <p class="small text-muted">Upload PFS document</p>
                    <a href="#" class="btn btn-sm btn-outline-info">Upload</a>
                </div>
            </div>
        </div>
        <div class="col-md-6 col-lg-3">
            <div class="card shadow-sm text-center">
                <div class="card-body">
                    <i class="fas fa-bullseye fa-3x text-warning mb-3"></i>
                    <h5>Financial Goals</h5>
                    <p class="small text-muted">Set investment objectives</p>
                    <a href="#" class="btn btn-sm btn-outline-warning">Set Goals</a>
                </div>
            </div>
        </div>
        <div class="col-md-6 col-lg-3">
            <div class="card shadow-sm text-center">
                <div class="card-body">
                    <i class="fas fa-folder-open fa-3x text-danger mb-3"></i>
                    <h5>Documents</h5>
                    <p class="small text-muted">Manage your documents</p>
                    <a href="#" class="btn btn-sm btn-outline-danger">View</a>
                </div>
            </div>
        </div>
        <div class="col-md-6 col-lg-3">
            <div class="card shadow-sm text-center">
                <div class="card-body">
                    <i class="fas fa-briefcase fa-3x text-success mb-3"></i>
                    <h5>My Investments</h5>
                    <p class="small text-muted">View your portfolio</p>
                    <a href="#" class="btn btn-sm btn-outline-success">View</a>
                </div>
            </div>
        </div>
    </div>

    <!-- Info Alert -->
    <div class="row mt-4">
        <div class="col-12">
            <div class="alert alert-info">
                <i class="fas fa-info-circle me-2"></i>
                <strong>Note:</strong> This dashboard shows your profile completion status. Complete all required sections to gain access to investment opportunities.
            </div>
        </div>
    </div>
</div>
