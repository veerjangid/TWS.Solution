@* Navigation bar component *@
<nav class="navbar navbar-expand-lg navbar-dark bg-primary">
    <div class="container-fluid">
        <a class="navbar-brand fw-bold" asp-controller="Home" asp-action="Index">
            <i class="fas fa-building me-2"></i>TWS Investment Platform
        </a>
        <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav"
                aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarNav">
            <ul class="navbar-nav ms-auto">
                @if (User.Identity?.IsAuthenticated ?? false)
                {
                    <!-- My Profile Dropdown -->
                    <li class="nav-item dropdown">
                        <a class="nav-link dropdown-toggle" href="#" id="profileDropdown" role="button"
                           data-bs-toggle="dropdown" aria-expanded="false">
                            <i class="fas fa-user-circle me-1"></i>
                            @User.Identity.Name
                        </a>
                        <ul class="dropdown-menu dropdown-menu-end" aria-labelledby="profileDropdown">
                            @if (User.IsInRole("Investor"))
                            {
                                <li>
                                    <a class="dropdown-item" asp-controller="Investor" asp-action="MyProfiles">
                                        <i class="fas fa-id-card me-2"></i>My Investor Profiles
                                    </a>
                                </li>
                            }
                            else if (User.IsInRole("Advisor") || User.IsInRole("OperationsTeam"))
                            {
                                <li>
                                    <a class="dropdown-item" asp-controller="Portal" asp-action="Dashboard">
                                        <i class="fas fa-tachometer-alt me-2"></i>My Portal
                                    </a>
                                </li>
                                <li>
                                    <a class="dropdown-item" asp-controller="Offering" asp-action="Index">
                                        <i class="fas fa-briefcase me-2"></i>My Offerings
                                    </a>
                                </li>
                            }
                            <li><hr class="dropdown-divider"></li>
                            <li>
                                <a class="dropdown-item" asp-controller="Account" asp-action="MyAccount">
                                    <i class="fas fa-cog me-2"></i>My Account
                                </a>
                            </li>
                            <li>
                                <form asp-controller="Account" asp-action="Logout" method="post" class="d-inline">
                                    @Html.AntiForgeryToken()
                                    <button type="submit" class="dropdown-item text-danger">
                                        <i class="fas fa-sign-out-alt me-2"></i>Logout
                                    </button>
                                </form>
                            </li>
                        </ul>
                    </li>
                }
                else
                {
                    <li class="nav-item">
                        <a class="nav-link" asp-controller="Account" asp-action="Login">
                            <i class="fas fa-sign-in-alt me-1"></i>Login
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" asp-controller="Account" asp-action="Register">
                            <i class="fas fa-user-plus me-1"></i>Register
                        </a>
                    </li>
                }
            </ul>
        </div>
    </div>
</nav>
