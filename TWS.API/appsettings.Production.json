{
  "ConnectionStrings": {
    "DefaultConnection": "Server=PRODUCTION_DB_SERVER;Database=TWS_Investment;User=PRODUCTION_DB_USER;Password=PRODUCTION_DB_PASSWORD;Port=3306;TreatTinyAsBoolean=true;SslMode=Required;"
  },
  "JwtSettings": {
    "SecretKey": "REPLACE_WITH_STRONG_SECRET_KEY_MINIMUM_64_CHARACTERS_FOR_PRODUCTION_USE",
    "Issuer": "TWS.API",
    "Audience": "TWS.Client",
    "ExpiryMinutes": 30,
    "RefreshTokenExpiryDays": 7
  },
  "AzureSettings": {
    "BlobStorageConnectionString": "REPLACE_WITH_PRODUCTION_BLOB_STORAGE_CONNECTION_STRING",
    "BlobStorageContainerName": "tws-documents-prod",
    "KeyVaultUrl": "https://tws-keyvault-prod.vault.azure.net/",
    "UseBlobStorage": true
  },
  "EncryptionSettings": {
    "EncryptionKey": "",
    "UseKeyVault": true,
    "KeyVaultSecretName": "EncryptionKey"
  },
  "Logging": {
    "LogLevel": {
      "Default": "Warning",
      "Microsoft.AspNetCore": "Warning",
      "Microsoft.EntityFrameworkCore": "Error"
    }
  },
  "Serilog": {
    "MinimumLevel": {
      "Default": "Warning",
      "Override": {
        "Microsoft": "Warning",
        "Microsoft.AspNetCore": "Warning",
        "System": "Warning"
      }
    },
    "WriteTo": [
      {
        "Name": "File",
        "Args": {
          "path": "Logs/tws-api-.txt",
          "rollingInterval": "Day",
          "retainedFileCountLimit": 30,
          "outputTemplate": "{Timestamp:yyyy-MM-dd HH:mm:ss.fff zzz} [{Level:u3}] {Message:lj}{NewLine}{Exception}"
        }
      }
    ],
    "Enrich": ["FromLogContext", "WithMachineName", "WithEnvironmentName"]
  },
  "AllowedHosts": "*",
  "CorsSettings": {
    "AllowedOrigins": [
      "https://app.tangiblewealthsolutions.com",
      "https://portal.tangiblewealthsolutions.com"
    ]
  }
}