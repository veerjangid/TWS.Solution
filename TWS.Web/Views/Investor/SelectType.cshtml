@{
    ViewData["Title"] = "Select Investor Type";
}

<div class="container py-5">
    <div class="row">
        <div class="col-12 text-center mb-5">
            <h2 class="display-5 fw-bold text-primary">Select Your Investor Type</h2>
            <p class="lead text-muted">Choose the type of account you'd like to open</p>
        </div>
    </div>

    <div class="row g-4">
        <!-- Individual -->
        <div class="col-md-6 col-lg-4">
            <div class="card h-100 shadow-sm hover-shadow">
                <div class="card-body text-center p-4">
                    <div class="mb-3">
                        <i class="fas fa-user fa-4x text-primary"></i>
                    </div>
                    <h5 class="card-title fw-bold">Individual</h5>
                    <p class="card-text text-muted">
                        Open an account in your own name as a single investor.
                    </p>
                    <a asp-action="SelectIndividual" class="btn btn-outline-primary w-100">
                        Select <i class="fas fa-arrow-right ms-2"></i>
                    </a>
                </div>
            </div>
        </div>

        <!-- Joint -->
        <div class="col-md-6 col-lg-4">
            <div class="card h-100 shadow-sm hover-shadow">
                <div class="card-body text-center p-4">
                    <div class="mb-3">
                        <i class="fas fa-users fa-4x text-success"></i>
                    </div>
                    <h5 class="card-title fw-bold">Joint</h5>
                    <p class="card-text text-muted">
                        Open an account with multiple account holders.
                    </p>
                    <a asp-action="SelectJoint" class="btn btn-outline-success w-100">
                        Select <i class="fas fa-arrow-right ms-2"></i>
                    </a>
                </div>
            </div>
        </div>

        <!-- IRA -->
        <div class="col-md-6 col-lg-4">
            <div class="card h-100 shadow-sm hover-shadow">
                <div class="card-body text-center p-4">
                    <div class="mb-3">
                        <i class="fas fa-piggy-bank fa-4x text-info"></i>
                    </div>
                    <h5 class="card-title fw-bold">IRA</h5>
                    <p class="card-text text-muted">
                        Open an Individual Retirement Account (Traditional, Roth, SEP, Inherited).
                    </p>
                    <a asp-action="SelectIRA" class="btn btn-outline-info w-100">
                        Select <i class="fas fa-arrow-right ms-2"></i>
                    </a>
                </div>
            </div>
        </div>

        <!-- Trust -->
        <div class="col-md-6 col-lg-4">
            <div class="card h-100 shadow-sm hover-shadow">
                <div class="card-body text-center p-4">
                    <div class="mb-3">
                        <i class="fas fa-landmark fa-4x text-warning"></i>
                    </div>
                    <h5 class="card-title fw-bold">Trust</h5>
                    <p class="card-text text-muted">
                        Open an account for a revocable or irrevocable trust.
                    </p>
                    <a asp-action="SelectTrust" class="btn btn-outline-warning w-100">
                        Select <i class="fas fa-arrow-right ms-2"></i>
                    </a>
                </div>
            </div>
        </div>

        <!-- Entity -->
        <div class="col-md-6 col-lg-4">
            <div class="card h-100 shadow-sm hover-shadow">
                <div class="card-body text-center p-4">
                    <div class="mb-3">
                        <i class="fas fa-building fa-4x text-danger"></i>
                    </div>
                    <h5 class="card-title fw-bold">Entity</h5>
                    <p class="card-text text-muted">
                        Open an account for an LLC, Corporation, or Partnership.
                    </p>
                    <a asp-action="SelectEntity" class="btn btn-outline-danger w-100">
                        Select <i class="fas fa-arrow-right ms-2"></i>
                    </a>
                </div>
            </div>
        </div>
    </div>

    <div class="row mt-5">
        <div class="col-12 text-center">
            <p class="text-muted">
                <i class="fas fa-info-circle me-2"></i>
                Not sure which type to choose? Contact our support team for assistance.
            </p>
        </div>
    </div>
</div>

@section Styles {
    <style>
        .hover-shadow {
            transition: all 0.3s ease;
        }

        .hover-shadow:hover {
            transform: translateY(-5px);
            box-shadow: 0 0.5rem 1rem rgba(0, 0, 0, 0.15) !important;
        }
    </style>
}
